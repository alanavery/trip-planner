<section class="sec-info">
  <h1><%= user.firstName %>'s Dashboard</h1>
</section>

<section class="sec-dashboard">
  <section class="sec-add-trip">
    <h2>Add a Trip</h2>
    <form action="/trips" method="post">
      <label for="trip-name">Name</label>
      <input id="trip-name" type="text" name="name">

      <label for="trip-start-date">Start Date</label>
      <input id="trip-start-date" type="date" name="startDate">

      <label for="trip-end-date">End Date</label>
      <input id="trip-end-date" type="date" name="endDate">

      <input class="button" type="submit" value="Add">
    </form>
  </section>

  <% if (trips.length) { %>
  <section class="sec-trips">
    <h2>Trips</h2>
    <% trips.forEach(trip => { %>
    <a href="/trips/<%= trip.id %>">
      <div class="div-trip">
        <h3><%= trip.name %></h3>
        <% let startDate = new Date(trip.startDate) %>
        <% startDate = `${startDate.getUTCMonth() + 1}.${startDate.getUTCDate()}` %>
        <% let endDate = new Date(trip.endDate) %>
        <% endDate = `${endDate.getUTCMonth() + 1}.${endDate.getUTCDate()}` %>
        <p class="trip-dates"><%= startDate %> â€“ <%= endDate %></p>
      </div>
    </a>
    <% }); %>
  </section>
  <% } %>
</section>